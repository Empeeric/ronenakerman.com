@import 'nib';

background-radial(start, end) {
    background: start;
    background: -moz-radial-gradient(center, ellipse cover, start 0%, end 100%);
    background: -webkit-radial-gradient(center, ellipse cover, start 0%, end 100%);
    background: -o-radial-gradient(center, ellipse cover, start 0%, end 100%);
    background: radial-gradient(ellipse at center, start 0%, end 100%);
}

* { box-sizing: border-box; }
body {
    margin: 0; padding: 40px;
    // background: url(../img/debut_dark.png);
    background: #fefefe;
}
.container {
    width: 800px;
}
#main {
    background-radial: #f1f0ec #d7d7d7;
    box-shadow: 0 10px 20px rgba(0,0,0,0.4);
    margin-bottom: 15px;
    border-radius: 2px;
}
footer, footer a { color: gray; }
h1 {
    float: left;
    margin: 5px 20px; padding: 0;
    line-height: 50px;
    background: url(../img/logo.png);
    font-size: 0;
    width: 59px; height: 40px;
}
nav {
    padding: 5px;
    font-weight: bold;
    border-bottom: 1px solid #fefefe;
}
#content {
    height: 530px;
}
.middle {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.gallery {
    height: 100%;
    position: relative;
    figure {
        @extend .middle;
        height: 80%;
    }
}
.slider {
    position: absolute; bottom: 0; left: 0;
    width: 100%; height: 100px;
    margin: 0; padding: 5px;
    overflow-x: hidden;
    a {
        float: left;
        padding: 5px;
        img {
            transition: transform .2s;
        }
        &:hover img {
            transform: scale(1.2);
        }
    }
    &.left {
        left: 0; top: 0;
        width: 100px; height: 83%;
        overflow-y: hidden;
    }
}

