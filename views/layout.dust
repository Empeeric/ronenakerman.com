<body>

<div id="main" class="container">
    <nav class="clearfix">
        <h1><a href="/">{config.title}</a></h1>
        <ul class="nav navbar-nav">
            {#nav}
                <li><a href="{url}" {?current}class="active"{/current}>{title}</a></li>
            {/nav}
        </ul>
    </nav>

    <div id="content">
        {#page}{+content/}{:else}{+content/}{/page}
