{>layout/}

{<content}
<section class="content">
    {?articles_en}
    <ul class="nav">
        <li><h3>English</h3></li>
        {#articles_en}
            <li><a href="#" data-id="{_id}">{title}</a></li>
        {/articles_en}
    </ul>
    {/articles_en}

    {?articles_he}
    <ul class="rtl nav">
        <li><h3>עברית</h3></li>
        {#articles_he}
            <li><a href="#" data-id="{_id}">{title}</a></li>
        {/articles_he}
    </ul>
    {/articles_he}

    <article>
        {#articles_en}
            <div id="{_id}" class="hide">
                <h3>{title}</h3>
                {content|s}
            </div>
        {/articles_en}
        {#articles_he}
            <div id="{_id}" class="hide rtl">
                <h3>{title}</h3>
                {content|s}
            </div>
        {/articles_he}
    </article>
</section>
{@contextDump /}
{/content}

{<scripts}
<script>
    $('article > :first-child').removeClass('hide');
    $('.nav a').click(function() {
        var id = $(this).data('id');
        console.log(id, $('#'+id));
        $('#'+id).removeClass('hide')
            .siblings().addClass('hide');
    });
</script>
{/scripts}
